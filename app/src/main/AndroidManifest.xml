<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ennjapps.bucketnote">

    <application
        android:name=".home.AppBucketDrops"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".home.ActivityMain"
            android:label="@string/title_activity_bucket"></activity>
        <activity
            android:name=".home.FirstTimeLogin"
            android:label="@string/title_activity_bucket">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".home.SettingsExampleActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.SettingsTheme"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize">
        </activity>
    </application>

</manifest>